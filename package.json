{
  "name": "@npccoin/npccoincore-message",
  "version": "2.0.0",
  "description": "Message Verification and Signing for npccoincore-lib",
  "author": "NPCcoin Core Developers.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "mocha",
    "build": "webpack --display-error-details",
    "coverage": "nyc mocha",
    "check-package": "npm run check-package:name && npm run check-package:version",
    "check-package:name": "test $(jq -r .name package.json) = $(jq -r .name package-lock.json)",
    "check-package:version": "test $(jq -r .version package.json) = $(jq -r .version package-lock.json)",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "npccoin",
    "npccoincore-lib",
    "message",
    "signing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/npccoin/npccoincore-message.git"
  },
  "dependencies": {
    "@npccoin/npccoincore-lib": "^0.17.9"
  },
  "devDependencies": {
    "chai": "~4.2.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "uglify-js-es6": "^2.8.9",
    "uglifyes-webpack-plugin": "^0.4.3",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "license": "MIT"
}
